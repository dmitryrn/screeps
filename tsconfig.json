{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "target": "ES6",
        "lib": ["es2017","DOM"],
        "strictNullChecks": true,
        "alwaysStrict": true,
        "noImplicitThis": true,
        "strict": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true
    },
    "files": ["src/main.ts"]
}
